{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:toplevel-schema",
    "description": "UKAEA top-level metadata schema",
    "type": "object",
    "required": [
        "identifier", "creator", "creation_time", "owner_group",
        "workflow_type", "is_published", "data_quality"
    ],
    "properties": {
        "identifier": {
            "type": "string",
            "description": ""
        },
        "creator": {
            "type": "string",
            "description": ""
        },
        "creation_time": {
            "type": "date-time",
            "description": ""
        },
        "owner_group": {
            "type": "string",
            "description": ""
        },
        "workflow_type": {
            "type": "string",
            "enum": ["facility", "simulation"],
            "description": ""
        },
        "is_published": {
            "type": "bool",
            "description": ""
        },
        "data_quality": {
            "type": "string",
            "enum": ["unchecked", "bad", "pass", "good"],
            "description": ""
        },
        "description": {
            "type": "string",
            "description": ""
        },
        "format": {
            "type": "string",
            "description": "could be array of strings for multiple formats"
        },
        "license": {
            "type": "string",
            "description": ""
        },
        "parent": {
            "type": "string",
            "description": ""
        },
        "children": {
            "type": "array[string]",
            "description": ""
        },
        "ukaea_username": {
            "type": "string",
            "description": ""
        },
        "update_time": {
            "type": "date-time",
            "description": ""
        },
        "updated_by": {
            "type": "string",
            "description": ""
        }
    }
}
