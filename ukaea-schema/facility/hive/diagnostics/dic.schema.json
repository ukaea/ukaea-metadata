{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:experiment:hive:dic-schema",
    "description": "Metadata to describe DIC diagnostic",
    "type": "object",
    "required": [ "insert_required" ],
    "properties": {
        "config": {
            "type": "string",
            "description": "[-]",
            "example": "Stereo (symmetric)"
        },
        "camera_model": {
            "type": "string",
            "description": "[-]",
            "example": "Allied Vision U-2460-M"
        },
        "camera_resolution": {
            "type": "array[int]",
            "description": "[pixels]",
            "example": [5328, 4608]
        },
        "field_of_view": {
            "type": "array[float]",
            "description": "[mm]",
            "example": [83.21, 71.91]
        },
        "image_scale": {
            "type": "float",
            "description": "[mm/pixel]",
            "example": 0.015
        },
        "stereo_angle": {
            "type": "float",
            "description": "[degrees]",
            "example": 12.45
        },
        "stand_off_distance": {
            "type": "float",
            "description": "[m]",
            "example": 0.335
        },
        "image_acquisition_rate": {
            "type": "float",
            "description": "[Hz]",
            "example": 1
        },
        "image_noise": {
            "type": "float",
            "description": "[%]",
            "example": 0.31
        },
        "imaged_surface_on_specimen": {
            "type": "string",
            "description": "[-]",
            "example": "XY plane"
        },
        "software_name": {
            "type": "string",
            "description": "[-]",
            "example": "MatchID"
        },
        "software_version": {
            "type": "string",
            "description": "[-]",
            "example": "2022.2"
        },
        "pattern_technique": {
            "type": "string",
            "description": "[-]",
            "example": "Airbrush"
        },
        "pattern_background": {
            "type": "string",
            "description": "[-]",
            "example": "black VHT paint"
        },
        "pattern_speckle": {
            "type": "string",
            "description": "[-]",
            "example": "white VHT paint"
        },
        "approx_feature_size": {
            "type": "float",
            "description": "[micron]",
            "example": 46.5
        },
        "lens_model": {
            "type": "string",
            "description": "[-]",
            "example": "Edmund Optics/50mm C Series Fixed Focal Length Lens"
        },
        "lens_focal_length": {
            "type": "float",
            "description": "[mm]",
            "example": 50.0 
        },
        "lens_aperture": {
            "type": "string",
            "description": "[-]",
            "example": "f/8" 
        },
        "lens_filters": {
            "type": "string",
            "description": "[-]",
            "example": "Edmund optics blue filter" 
        },
        "cal_target_make": {
            "type": "string",
            "description": "[-]",
            "example": "MatchID"
        },
        "cal_target_dims": {
            "type": "array[int]",
            "description": "[dots]",
            "example": [9,12]
        },
        "cal_target_spacing": {
            "type": "float",
            "description": "[mm]",
            "example": 5.0
        }
    }
}
