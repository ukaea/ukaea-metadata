{
    "$id": "https://w3id.org/fuel/schemas/1.0.0/facility/hive/diagnostic",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Metadata schema for a HIVE diagnostic",
    "type": "object",
    "required": [
        "diagnosticName",
        "diagnosticType",
        "port",
        "diagnostic"
    ],
    "properties": {
        "diagnosticName": {
            "type": "string",
            "example": "TC01"
        },
        "diagnosticType": {
            "type": "string",
            "example": "Thermocouple"
        },
        "port": { "$ref": "./port.schema.json#" },
        "diagnostic": {
            "oneOf": [
                { "$ref": "../../diagnostics/dic.schema.json#" },
                { "$ref": "../../diagnostics/tc.schema.json#" }
            ]
        }
    }
}
