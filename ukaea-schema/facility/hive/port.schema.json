{
    "$id": "urn:ukaea:facility:hive-port",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Metadata schema for a HIVE port",
    "type": "object",
    "required": [
        "portID",
        "portDescription",
        "portSizeStandard"
    ],
    "properties": {
        "portID": {
            "type": "string",
            "example": "Port_1"
        },
        "portDescription": {
            "type": "string",
            "example": "Front Port"
        },
        "portSizeStandard": {
            "type": "string",
            "example": "CF100" 
        }
    }
}
