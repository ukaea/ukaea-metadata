{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:facility",
    "description": "UKAEA facility metadata schema",
    "type": "object",
    "required": [
        "run_location", "start_time", "end_time", "output_files"
    ],
    "properties": {
        "run_location": {
            "type": "enum[string]",
            "description": "Culham, FTF, The Moon"
        },
        "start_time": {
            "type": "date-time",
            "description": ""
        },
        "end_time": {
            "type": "date-time",
            "description": ""
        },
        "output_files": {
            "type": "array[string]",
            "description": ""
        }
    }
}
