{
	"$schema": "https://json-schema.org/draft/2020-12/schema", 
    "$id": "urn:ukaea:simulation-schema",
    "description": "UKAEA simulation metadata schema",
	"type": "object",
    "required": [
        "hardwareInformation", "code", "inputs", "outputFiles"
    ],
    "properties": {
        "simulationRuntime": {
            "type": "date-time",
            "description": ""
        },
        "hardwareInformation": {
            "type": "object[string, string]",
            "description": ""
        },
        "code": {
            "type": "array",
            "description": "",
            "required": [ "code.name", "code.version", "code.repo" ],
            "items": {
                "code.name": {
                    "type": "string",
                    "description": ""
                },
                "code.version": {
                    "type": "string",
                    "description": ""
                },
                "code.repo": {
                    "type": "string",
                    "description": ""
                }
            }
        },
        "inputs": {
            "type": "array[string]",
            "description": ""
        },
        "outputFiles": {
            "type": "array[string]",
            "description": ""
        }
    }
}
