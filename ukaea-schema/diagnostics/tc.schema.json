{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:experiment:hive:tc-schema",
    "description": "Metadata to describe thermocouple diagnostic",
    "type": "object",
    "required": [ "insert_required" ],
    "properties": {
        "status": {
            "type": "string",
            "description": "[-]",
            "example": "Active / Failed before test"
        },
        "attachment": {
            "type": "string",
            "description": "[-]",
            "example": "spot weld with inert gas shield"
        },
        "tc_type": {
            "type": "string",
            "description": "[-]",
            "example": "K"
        },
        "location": {
            "type": "array",
            "description": "[X,Y,Z] [mm]",
            "example": [18.065, 2.355, 23.0],
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
        },
        "area_type": {
            "type": "string",
            "description": "[-]",
            "example": "Circular"
        },
        "circle_diameter": {
            "type": "float",
            "description": "[mm]",
            "example": 1.31
        },
        "noise_floor": {
            "type": "string",
            "description": "[-]",
            "example": "not captured - assume standard resolution"
        }
    }
}
