{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:experiment:hive:diagnostics:camera-schema",
    "description": "Metadata to describe camera diagnostics",
    "type": "object",
    "required": ["cameraInformation", "lensN", "captureSettings"],
    "properties": {
        "cameraInformation": {
            "type": "object",
            "properties": {
                "make": { "type": "string" },
                "model": { "type": "string" },
                "serialNumber": { "type": "string" },
                "resolution": {
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "units": "qudt:px"
                    },
                    "description": "The camera resolution in pixels, represented as [width, height]."
                }
            },
            "required": ["make", "model", "resolution"]
        },
        "lensInformation": {
            "type": "object",
            "properties": {
                "make": { "type": "string" },
                "model": { "type": "string" },
                "serialNumber": { "type": "string" },
                "focalLength": { "type": "number" },
                "aperture": { "type": "string" },
                "fieldOfView": {
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "units": "qudt:px"
                    },
                    "description": "The field of view in pixels, represented as [width, height]."
                }
            },
            "required": ["make", "model", "focalLength", "aperture"]
        },
        "captureSettings": {
            "type": "object",
            "properties": {
                "imageAcquisitionRate": {
                    "type": "number",
                    "description": "The rate at which images are acquired, measured in Hertz Fluid.",
                    "unit": "qudt:Hertz"
                },
                "imageNoise": {
                    "type": "number",
                    "description": "The noise level in the image, typically measured as a signal-to-noise ratio."
                },
                "imageScale": {
                    "type": "number",
                    "description": "The scale of the image in millimeters per pixel (mm/pixel) or similar.",
                    "unit": "qudt:MilliM-PER-Pixel"
                }
            },
            "required": ["imageAcquisitionRate", "imageNoise"]
        }
    }
}

