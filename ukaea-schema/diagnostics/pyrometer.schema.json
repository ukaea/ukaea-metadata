{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:experiment:hive:diagnostics:pyrometer-schema",
    "description": "Metadata to describe pyrometer diagnostics",
    "type": "object",
    "properties": {
        "deviceInformation": {
            "type": "object",
            "properties" : {
                "make": {
                    "type": "string"
                },
                "model": {
                    "type": "string"
                },
                "serialNumber": {
                    "type": "integer"
                },
                "spectralRange": {
                    "type": "object",
                    "properties": {
                        "minimum": {
                            "type": "number",
                            "units": "qudt:MicroM"
                        },
                        "maximum": {
                            "type": "number",
                            "units": "qudt:MicroM"
                        }
                    },
                    "required": ["minimum", "maximum"]
                },
                "temperatureRange": {
                    "type": "object",
                    "properties": {
                        "minimum": {
                            "type": "number",
                            "units": "qudt:DEG_C"
                        },
                        "maximum": {
                            "type": "number",
                            "units": "qudt:DEG_C"
                        }
                    },
                    "required": ["minimum", "maximum"]
                }
            },
            "required": ["make", "model", "serialNumber",  
            "temperatureRange", "spectralRange"]
        },
        "deviceSettings": {
            "type": "object",
            "properties": {
                "emissivity": {
                    "type": "number"
                },
                "framerate": {
                    "type": "number",
                    "units": "qudt:HZ"
                }
            },
            "required": ["emissivity", "framerate"]
        },
        "location": {
            "type": "object",
            "properties": {
                "type": "object",
                "properties": {
                    "portID": {
                        "type": "str"
                    },
                    "viewportID": {
                        "type": "str"
                    }
                },
                "required": ["portID", "viewportID"]
            }
        }
    },
    "required": ["deviceInformation", "deviceSettings", "location"]
}