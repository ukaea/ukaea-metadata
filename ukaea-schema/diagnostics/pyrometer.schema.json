{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "urn:ukaea:experiment:hive:diagnostics:pyrometer-schema",
    "description": "Metadata to describe pyrometer diagnostics",
    "type": "object",
    "properties": {
        "deviceId": {
            "type": "string",
            "example": "uuid?"
        },
        "make": {
            "type": "string"
        },
        "model": {
            "type": "string"
        },
        "partNumber": {
            "type": "integer"
        },
        "serialNumber": {
            "type": "integer"
        },
        "temperatureRange": {
            "type": "number",
            "unit": "qudt:DEG_C"
        },
        "wavelengthRange": {
            "type": "number",
            "unit": "qudt:M"
        },
        "aimingMethod": {
            "enum": ["camera", "laser"]
        }
    }, 
    "required": ["deviceId", "make", "model", "partNumber", "serialNumber", 
                "temperatureRange", "wavelengthRange", "aimingMethod"] 
}